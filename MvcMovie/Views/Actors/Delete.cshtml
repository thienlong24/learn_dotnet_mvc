@model MvcMovie.Models.Actor

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/movies.css" />

<div class="container mt-4">
    <h1 class="text-center mb-4">Delete Actor</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Actor</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateOfBirth)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Gender)
            </dd>
        </dl>
    
        <form asp-controller="Actors" asp-action="Delete" method="delete" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>

        <!-- Toast container -->
        <div id="toast" class="toast"></div>
    </div>

    @section Scripts {
        <script src="~/js/toast-util.js"></script>
        <script>
            bindAjaxForm("form", "Actor", function(data) {
                window.location.href = `/Actors?successMessage=Actor deleted successfully! Id=${data.id}, Name=${data.fullName}`;
            });
        </script>
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
