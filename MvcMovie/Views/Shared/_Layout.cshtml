<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcMovie</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #2c3e50, #4ca1af); /* Cold and dark gradient */
            color: #ecf0f1; /* Light text for contrast */
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #34495e; /* Darker cold color */
        }

        .navbar-brand, .nav-link {
            color: #ecf0f1 !important; /* Light text for navbar links */
        }

        .navbar-brand:hover, .nav-link:hover {
            color: #bdc3c7 !important; /* Slightly lighter hover effect */
        }

        .container {
            background-color: #2c3e50; /* Dark container background */
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); /* Subtle shadow */
            margin-top: 20px;
        }

        h1, h2, h3, h4, h5, h6 {
            color: #ecf0f1; /* Light text for headings */
        }

        .btn-primary {
            background-color: #4ca1af; /* Cold blue */
            border-color: #4ca1af;
        }

        .btn-primary:hover {
            background-color: #3b8d99; /* Slightly darker blue on hover */
            border-color: #3b8d99;
        }

        .btn-secondary {
            background-color: #7f8c8d; /* Neutral gray */
            border-color: #7f8c8d;
        }

        .btn-secondary:hover {
            background-color: #95a5a6; /* Lighter gray on hover */
            border-color: #95a5a6;
        }

        .table {
            background-color: #34495e; /* Darker table background */
            color: #ecf0f1; /* Light text for table */
        }

        .table thead {
            background-color: #2c3e50; /* Darker header */
        }

        .table-hover tbody tr:hover {
            background-color: #3b8d99; /* Highlight row on hover */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">MvcMovie</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Movies">Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Actors">Actors</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="container">
        @RenderBody()
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
